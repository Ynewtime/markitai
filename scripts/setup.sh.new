# Print installation summary
# Usage: print_summary
print_summary() {
    clack_section "$(i18n section_summary)"

    # Print installed components
    if [ -n "$INSTALLED_COMPONENTS" ]; then
        _installed_list=""
        _ifs_old="$IFS"
        IFS='|'
        for _comp in $INSTALLED_COMPONENTS; do
            [ -n "$_comp" ] && _installed_list="${_installed_list}${GREEN}✓${NC} $(i18n "$_comp")\n"
        done
        IFS="$_ifs_old"
        if [ -n "$_installed_list" ]; then
            clack_note "$(i18n summary_installed)" "$(printf '%b' "$_installed_list")"
        fi
    fi

    # Print skipped components
    if [ -n "$SKIPPED_COMPONENTS" ]; then
        _skipped_list=""
        _ifs_old="$IFS"
        IFS='|'
        for _comp in $SKIPPED_COMPONENTS; do
            [ -n "$_comp" ] && _skipped_list="${_skipped_list}${YELLOW}○${NC} $(i18n "$_comp")\n"
        done
        IFS="$_ifs_old"
        if [ -n "$_skipped_list" ]; then
            clack_note "$(i18n summary_skipped)" "$(printf '%b' "$_skipped_list")"
        fi
    fi

    # Print failed components
    if [ -n "$FAILED_COMPONENTS" ]; then
        _failed_list=""
        _ifs_old="$IFS"
        IFS='|'
        for _comp in $FAILED_COMPONENTS; do
            [ -n "$_comp" ] && _failed_list="${_failed_list}${RED}✗${NC} $(i18n "$_comp")\n"
        done
        IFS="$_ifs_old"
        if [ -n "$_failed_list" ]; then
            clack_note "$(i18n summary_failed)" "$(printf '%b' "$_failed_list")"
        fi
    fi

    clack_info "$(i18n info_docs): https://markitai.ynewtime.com"
    clack_info "$(i18n info_issues): https://github.com/Ynewtime/markitai/issues"
}

