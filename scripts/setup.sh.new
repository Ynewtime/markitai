set -e

# ============================================================
# Internationalization (i18n) System
# ============================================================

# Detect language from environment
# Returns: "zh" for Chinese, "en" for English (default)
detect_lang() {
    _lang_env="${LANG:-}${LC_ALL:-}${LC_MESSAGES:-}"
    case "$_lang_env" in
        zh_CN*|zh_TW*|zh_HK*|zh_SG*|zh.*)
            echo "zh"
            ;;
        *)
            echo "en"
            ;;
    esac
}

LANG_CODE=$(detect_lang)

